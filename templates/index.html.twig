{% extends 'base.html.twig' %}

{% block title %}Acuarelas Fantasía{% endblock %}

{% block body %}

    {{ include('comunes/_header.html.twig') }}
   
    <!-- header -->
    <header
      id="header"
      class="vh-100 hero-banner"
    ></header>
    <!-- end of header -->

    <!-- collection -->
    <section id="collection" class="py-5 mt-5">
      <div class="container">
        <div class="title text-center">
          <h2 class="position-relative d-inline-block">
            Productos Destacados
          </h2>
        </div>

        <div class="row g-0">
          <div
            class="d-flex flex-wrap justify-content-center mt-5 filter-button-group"
          >
            <button
              type="button"
              class="btn m-2 text-dark active-filter-btn"
              data-filter="*"
            >
              Todos
            </button>
            <button type="button" class="btn m-2 text-dark" data-filter=".best">
              Con descuento
            </button>
            <button type="button" class="btn m-2 text-dark" data-filter=".feat">
            Más vendidos
            </button>
            <button type="button" class="btn m-2 text-dark" data-filter=".new">
              Nuevos
            </button>
            <a href="{{ path('app_producto_new') }}">Create new</a>
          </div>

          <div class="collection-list mt-4 row gx-0 gy-3">

            {% for producto in productos %}
                {# 
                <a href="{{ path('app_producto_show', {'id': producto.id}) }}">Ver</a>
                <a href="{{ path('app_producto_edit', {'id': producto.id}) }}">Editar</a> 
                <a href="{{ path('app_producto_new') }}">Create new</a>
                #}

                <div class="col-md-6 col-lg-4 col-xl-3 p-2">
                    <div class="collection-img position-relative">
                      <a href="{{ path('app_producto_show', {'id': producto.id}) }}">
                        <img src="{{ asset('/images/' ~  producto.imagen) }}" class="w-100" />
                      </a>                    
                    </div>
                    <div class="text-center">
                        <div class="rating mt-3">
                        <span class="text-primary"><i class="fas fa-star"></i></span>
                        <span class="text-primary"><i class="fas fa-star"></i></span>
                        <span class="text-primary"><i class="fas fa-star"></i></span>
                        <span class="text-primary"><i class="fas fa-star"></i></span>
                        <span class="text-primary"><i class="fas fa-star"></i></span>
                        </div>
                        <p class="text-capitalize my-1">{{ producto.nombre }}</p>
                        <span class="fw-bold">€ {{ producto.precio }}</span>
                    </div>
                </div>
            {% else %}
                <p>no records found</p>
            {% endfor %}

          </div>
        </div>
      </div>
    </section>
    <!-- end of collection -->

    <!-- special features/ beneficios -->
    <section id="special" class="py-5 mb-5">
      <div class="container">
        <div class="offers-content title text-center py-5">
          <h2 class="position-relative d-inline-block">
            ¿Por qué comprar en nuestra tienda?
          </h2>
        </div>
        

        <div class="special-list row g-0">
          <div class="col-md-6 col-lg-4 col-xl-3 p-2">
            <div class="special-img position-relative overflow-hidden">
              <img src="/images/beneficio1.jpg" class="w-100" />
              <span
                class="position-absolute d-flex align-items-center justify-content-center text-primary fs-4"
              >
              </span>
            </div>
            <div class="text-center">
              <p class="text-capitalize mt-3 mb-1">Hecho a mano en España</p>
              <span class="fw-bold d-block">Apoyas a los negocios locales</span>
            </div>
          </div>

          <div class="col-md-6 col-lg-4 col-xl-3 p-2">
            <div class="special-img position-relative overflow-hidden">
              <img src="/images/beneficio2.jpg" class="w-100" />
              <span
                class="position-absolute d-flex align-items-center justify-content-center text-primary fs-4"
              >
              </span>
            </div>
            <div class="text-center">
              <p class="text-capitalize mt-3 mb-1">Ahorras dinero</p>
              <span class="fw-bold d-block"
                >Te ofrecemos los mejores descuentos</span
              >
            </div>
          </div>

          <div class="col-md-6 col-lg-4 col-xl-3 p-2">
            <div class="special-img position-relative overflow-hidden">
              <img src="/images/beneficio3.jpg" class="w-100" />
              <span
                class="position-absolute d-flex align-items-center justify-content-center text-primary fs-4"
              >
              </span>
            </div>
            <div class="text-center">
              <p class="text-capitalize mt-3 mb-1">
                Gran variedad de artículos
              </p>
              <span class="fw-bold d-block"
                >Para cada una de tus aficiones</span
              >
            </div>
          </div>

          <div class="col-md-6 col-lg-4 col-xl-3 p-2">
            <div class="special-img position-relative overflow-hidden">
              <img src="/images/beneficio4.jpg" class="w-100" />
              <span
                class="position-absolute d-flex align-items-center justify-content-center text-primary fs-4"
              >
              </span>
            </div>
            <div class="text-center">
              <p class="text-capitalize mt-3 mb-1">Talleres gratuitos</p>
              <span class="fw-bold d-block">Para nuestros clientes leales</span>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- end of special features -->

    <!-- offers -->
    <section id="offers" class="py-1">
      <div class="container">
        <div
          class="row d-flex align-items-center justify-content-center text-center justify-content-lg-start text-lg-start"
        >
          <div class="offers-content text-center">
            <span>Descuento de 25%</span>
            <h2 class="mt-3 mb-4">En Articulos de Papelería</h2>
            <a href="#" class="btn">Ver Rebajas</a>
          </div>
        </div>
      </div>
    </section>
    <!-- end of offers -->

    <!-- testimonials -->
    <section id="testimonials" class="py-5 mb-4">
      <div class="container">
        <div class="offers-content title text-center py-5">
          <h2 class="position-relative d-inline-block">Testimoniales</h2>
        </div>

        <div class="row g-3">
          <div
            class="card text-center border-0 col-md-6 col-lg-4 bg-transparent my-3 px-5"
          >
            <img class="testimonial-img mx-auto d-block"
            src="/images/testimonial_1.jpg" alt="" />
            <div class="card-body px-0">
              <h4 class="card-title">Es mi tienda de favorita</h4>
